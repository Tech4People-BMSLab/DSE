{
    // "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules/*",
    ],
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2020",
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "isolatedModules": false,
        "typeRoots": [
            "node_modules/@types",
        ],
        "types": [
            "node",
            "svelte",
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@popup/*": ["src/popup/app/*"],
        }
    },
}
